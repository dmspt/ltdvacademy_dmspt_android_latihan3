<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_gravity="center"
        android:padding="@dimen/paddingAll"
        android:layout_width="@dimen/ukuranpict"
        android:layout_height="@dimen/ukuranpict"
        android:src="@drawable/profil"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text1"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/ukurantext1"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text2"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/ukurantext1"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/paddingAll">

        <Button
            android:id="@+id/btnMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/paddingAll"
            android:background="@color/buttonColor"
            android:hint="@string/textButton"
            android:paddingLeft="@dimen/paddingAll"
            android:paddingRight="@dimen/paddingAll" />

    </LinearLayout>

</LinearLayout>
